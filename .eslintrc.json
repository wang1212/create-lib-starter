{
	"parser": "babel-eslint",
	"parserOptions": {
		"sourceType": "module"
	},
	"env": {
		"node": true,
		"browser": true,
		"es6": true,
		"jest": false
	},
	"plugins": ["babel", "prettier"],
	"extends": ["eslint:recommended", "plugin:prettier/recommended", "prettier/babel"],
	"rules": {
		"no-console": [
			"error",
			{
				"allow": ["warn", "error"]
			}
		],
		"indent": ["error", "tab"],
		"linebreak-style": ["error", "windows"],
		"quotes": ["error", "single"],
		"semi": ["error", "never"]
	},
	"globals": {}
}
