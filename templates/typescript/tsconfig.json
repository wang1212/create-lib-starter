{
  "compilerOptions": {
    "target": "ES5",
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./build",
    // "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "declaration": true,
    "declarationDir": "./types",
    "typeRoots": ["node_modules/@types", "./vendors/@types"]
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "build",
    "rollup.config.js",
    ".eslintrc.cjs",
    "vendors",
    "docs"
  ]
}
