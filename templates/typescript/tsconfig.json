{
  "compilerOptions": {
    "target": "ES5",

    "rootDir": "./src",
    "outDir": "./build",

    "sourceMap": true,
    "removeComments": false,

    "strict": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    // "resolveJsonModule": true,

    "declaration": true,
    "declarationMap": false,
    "declarationDir": "./types",
    // "emitDeclarationOnly": true,

    "typeRoots": ["node_modules/@types", "./vendors/@types"]
  },
  "include": ["src", "vendors/@types"],
  "exclude": [
    "node_modules",
    "build",
    "rollup.config.js",
    ".eslintrc.cjs",
    "vendors",
    "docs"
  ]
}
